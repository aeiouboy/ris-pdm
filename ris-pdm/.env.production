# Production Environment Configuration
COMPOSE_PROJECT_NAME=ris-dashboard-prod
COMPOSE_FILE=docker-compose.yml

# Backend Configuration
NODE_ENV=production
PORT=3001
CORS_ORIGIN=https://ris-dashboard.com

# Azure DevOps Configuration
AZURE_DEVOPS_ORG=${AZURE_DEVOPS_ORG}
AZURE_DEVOPS_PROJECT=${AZURE_DEVOPS_PROJECT}
AZURE_DEVOPS_PAT=${AZURE_DEVOPS_PAT}

# Rate Limiting (strict for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Real-time Service Configuration
REALTIME_POLLING_INTERVAL=30000
ENABLE_INCREMENTAL_UPDATES=true
MAX_WEBSOCKET_CLIENTS=1000
ENABLE_CHANGE_DETECTION=true

# Database Configuration
DATABASE_URL=${PRODUCTION_DATABASE_URL}

# Redis Configuration
REDIS_URL=${PRODUCTION_REDIS_URL}
REDIS_PASSWORD=${PRODUCTION_REDIS_PASSWORD}

# Frontend Configuration
VITE_API_BASE_URL=https://api.ris-dashboard.com
VITE_WS_URL=wss://api.ris-dashboard.com
VITE_ENV=production

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/production.crt
SSL_KEY_PATH=/etc/ssl/private/production.key

# Monitoring Configuration
GRAFANA_USER=${GRAFANA_USER}
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Security
JWT_SECRET=${JWT_SECRET}
ENCRYPT_KEY=${ENCRYPT_KEY}