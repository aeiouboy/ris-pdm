{
  "name": "performance-dashboard-backend",
  "version": "1.0.0",
  "description": "Backend API for RIS Performance Dashboard",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "node src/scripts/migrate.js",
    "migrate:up": "node src/scripts/migrate.js up",
    "migrate:seed": "node src/scripts/migrate.js seed",
    "migrate:setup": "node src/scripts/migrate.js setup",
    "migrate:reset": "node src/scripts/migrate.js reset",
    "migrate:status": "node src/scripts/migrate.js status",
    "db:health": "node src/scripts/migrate.js health",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js"
  },
  "keywords": [
    "performance",
    "dashboard",
    "azure-devops",
    "metrics",
    "nodejs",
    "postgresql",
    "redis"
  ],
  "author": "RIS Product Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "pg": "^8.11.0",
    "redis": "^4.6.7",
    "node-fetch": "^3.3.1",
    "dotenv": "^16.1.4",
    "winston": "^3.9.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.0",
    "joi": "^17.9.2",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "prettier": "^2.8.8",
    "@types/node": "^20.3.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/scripts/**",
      "!src/config/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}