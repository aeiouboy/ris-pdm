# Development Environment Configuration Template
# Copy this file to .env.development and configure with your development values

# ================================================================
# SERVER CONFIGURATION
# ================================================================
PORT=3002
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Development security (more relaxed)
SKIP_AUTH=true
SESSION_SECRET=dev-session-secret-not-for-production
JWT_SECRET=dev-jwt-secret-key

# ================================================================
# AZURE DEVOPS CONFIGURATION
# ================================================================

# Azure DevOps Organization and Project (use test/dev environment)
AZURE_DEVOPS_ORG=your-dev-organization
AZURE_DEVOPS_PROJECT=Your Development Project

# Development Authentication (PAT is simpler for development)
AZURE_DEVOPS_PAT=your-development-personal-access-token

# OAuth (optional for development testing)
AZURE_OAUTH_CLIENT_ID=your-dev-azure-ad-app-client-id
AZURE_OAUTH_CLIENT_SECRET=your-dev-azure-ad-app-client-secret
AZURE_OAUTH_REDIRECT_URI=http://localhost:3002/auth/azure/callback

# API Configuration
AZURE_DEVOPS_API_VERSION=7.0
AZURE_DEVOPS_RATE_LIMIT=60

# Multi-project support
AZURE_DEVOPS_FETCH_ALL_PROJECTS=true

# ================================================================
# REDIS CONFIGURATION (optional for development)
# ================================================================

# Use local Redis or disable caching
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=
# REDIS_DB=0
# REDIS_KEY_PREFIX=ris:dev:

# For development without Redis, use in-memory caching
REDIS_ENABLED=false

# ================================================================
# CACHING CONFIGURATION
# ================================================================

# Shorter TTL for development (faster iteration)
CACHE_TTL_WORK_ITEMS=60
CACHE_TTL_WORK_ITEM_DETAILS=180
CACHE_TTL_ITERATIONS=300
CACHE_TTL_TEAM_CAPACITY=180
CACHE_TTL_METRICS=60
CACHE_TTL_TEAM_MEMBERS=300

# Enable caching for testing
ENABLE_CACHING=true
CACHE_INVALIDATION_STRATEGY=immediate

# ================================================================
# REAL-TIME FEATURES
# ================================================================

# WebSocket configuration (development)
ENABLE_WEBSOCKETS=true
WEBSOCKET_PORT=3003
MAX_WEBSOCKET_CLIENTS=10

# Faster polling for development
REALTIME_POLLING_INTERVAL=10000
ENABLE_INCREMENTAL_UPDATES=true
ENABLE_CHANGE_DETECTION=true

# ================================================================
# LOGGING CONFIGURATION
# ================================================================

# Verbose logging for development
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=3
LOG_MAX_SIZE=50m

# Console-friendly logging
ENABLE_STRUCTURED_LOGGING=false
LOG_FORMAT=simple

# ================================================================
# DATABASE CONFIGURATION
# ================================================================

# Local Supabase or development instance
NEXT_PUBLIC_SUPABASE_URL=https://your-dev-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-dev-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-dev-supabase-service-role-key

# Smaller connection pool for development
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_CONNECTION_TIMEOUT=10000

# ================================================================
# SECURITY CONFIGURATION (relaxed for development)
# ================================================================

# Lenient rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS settings (permissive for development)
CORS_CREDENTIALS=true
CORS_MAX_AGE=0

# Security headers (disabled for development)
ENABLE_SECURITY_HEADERS=false
CONTENT_SECURITY_POLICY=

# ================================================================
# MONITORING AND METRICS
# ================================================================

# Development monitoring
HEALTH_CHECK_INTERVAL=10000
HEALTH_CHECK_TIMEOUT=2000

# Enable detailed monitoring for debugging
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=1.0

# Metrics for development
ENABLE_METRICS_COLLECTION=true
METRICS_ENDPOINT=/metrics
METRICS_RETENTION_DAYS=7

# ================================================================
# EMAIL CONFIGURATION (optional for development)
# ================================================================

# Use a test email service or disable
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-password

# Development email settings
EMAIL_FROM=dev@localhost
EMAIL_NOTIFICATIONS_ENABLED=false

# ================================================================
# BACKUP AND RECOVERY (disabled for development)
# ================================================================

ENABLE_AUTOMATED_BACKUPS=false
BACKUP_SCHEDULE=
BACKUP_RETENTION_DAYS=7
BACKUP_STORAGE_PATH=./backups

# ================================================================
# FEATURE FLAGS
# ================================================================

# Enable all features for development testing
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_EXPORT_FEATURES=true
ENABLE_BULK_OPERATIONS=true
ENABLE_AUDIT_LOGGING=true

# Enable experimental features for testing
ENABLE_EXPERIMENTAL_FEATURES=true
EXPERIMENTAL_CACHE_STRATEGY=true

# ================================================================
# INTEGRATION CONFIGURATION (development/testing)
# ================================================================

# Use webhook test services
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=

# Development API keys
EXTERNAL_API_KEY=dev-api-key
EXTERNAL_API_TIMEOUT=5000

# ================================================================
# DEPLOYMENT CONFIGURATION
# ================================================================

# Development resource limits
CONTAINER_MEMORY_LIMIT=512M
CONTAINER_CPU_LIMIT=0.5

# Health check
ENABLE_LOAD_BALANCER_HEALTH_CHECK=true
HEALTH_CHECK_PATH=/health

# Quick shutdown for development
GRACEFUL_SHUTDOWN_TIMEOUT=5000

# ================================================================
# DEVELOPMENT TOOLS
# ================================================================

# Debug settings (enabled for development)
ENABLE_DEBUG_LOGGING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_DETAILED_ERRORS=true

# Development middleware
ENABLE_DEV_MIDDLEWARE=true
ENABLE_CORS_DEBUG=true

# Hot reload and development features
ENABLE_HOT_RELOAD=true
ENABLE_FILE_WATCHING=true
ENABLE_AUTO_RESTART=true