# Staging Environment Configuration
COMPOSE_PROJECT_NAME=ris-dashboard-staging
COMPOSE_FILE=docker-compose.yml

# Backend Configuration
NODE_ENV=staging
PORT=3001
CORS_ORIGIN=https://staging.ris-dashboard.com

# Azure DevOps Configuration
AZURE_DEVOPS_ORG=${AZURE_DEVOPS_ORG}
AZURE_DEVOPS_PROJECT=${AZURE_DEVOPS_PROJECT}
AZURE_DEVOPS_PAT=${AZURE_DEVOPS_PAT}

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Real-time Service Configuration
REALTIME_POLLING_INTERVAL=30000
ENABLE_INCREMENTAL_UPDATES=true
MAX_WEBSOCKET_CLIENTS=500
ENABLE_CHANGE_DETECTION=true

# Database Configuration
DATABASE_URL=${STAGING_DATABASE_URL}

# Redis Configuration
REDIS_URL=${STAGING_REDIS_URL}
REDIS_PASSWORD=${STAGING_REDIS_PASSWORD}

# Frontend Configuration
VITE_API_BASE_URL=https://staging-api.ris-dashboard.com
VITE_WS_URL=wss://staging-api.ris-dashboard.com
VITE_ENV=staging

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/staging.crt
SSL_KEY_PATH=/etc/ssl/private/staging.key

# Monitoring Configuration
GRAFANA_USER=${GRAFANA_USER}
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}